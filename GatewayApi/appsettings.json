{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "*",
  "JwtValidationOptions": {
    "ValidateIssuer": false, // no need to validate issuer
    "ValidateAudience": false, // no need to validate audience
    "ValidateLifetime": true, // validate token lifetime
    "ValidateIssuerSigningKey": true, // validate token signature
    "AccessTokenName": "accessToken"
  },
  "AccessTokenOptions": {
    "Name": "accessToken",
    "ExpiresMinutes": 15,
    "ExpiresBeforeMinutes": 3,
    "SameSite": "None",
    "Secure": true
  },
  "RefreshTokenOptions": {
    "Name": "refreshToken",
    "ExpiresDays": 7,
    "SameSite": "None",
    "Secure": true
  }
}