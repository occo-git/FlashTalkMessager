{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "*",
  "JwtValidationOptions": {
    "ValidateIssuer": false, // no need to validate issuer
    "ValidateAudience": false, // no need to validate audience
    "ValidateLifetime": true, // validate token lifetime
    "ValidateIssuerSigningKey": true // validate token signature
  },
  "AccessTokenOptions": {
    "ExpiresMinutes": 15,
    "MinutesBeforeExpiration": 3,
    "SameSite": "Strict",
    "Secure": true
  },
  "RefreshTokenOptions": {
    "ExpiresDays": 7,
    "SameSite": "Strict",
    "Secure": true
  },
  "RefreshTokenCleanupOptions": {
    "CleanupIntervalMinutes": 10
  },
  "SignalROptions": {
    "HandshakeTimeoutSeconds": 30,
    "KeepAliveIntervalSeconds": "30",
    "TimeoutSeconds": "60"
  }
}